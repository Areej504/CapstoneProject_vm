                    }
                ],
                "arg2": [
                    {
                        "time": "3",
                        "value": "100"
                    }
                ]
            },
            "expected_output": {
                "sum": [
                    {
                        "time": "5",
                        "value": "200"
                    }
                ]
            }
        },
